{
  "name": "website",
  "author": "Pete O'Shea",
  "license": "ISC",
  "version": "1.0.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest",
    "test-all": "npm run lint && npm run format && npm run type-check && npm run test",
    "type-check": "tsc --pretty --noEmit"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint",
      "prettier --write"
    ],
    "@(*.@(json|md|yml)|.*rc)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.0",
    "@types/react": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "autoprefixer": "^10.3.4",
    "babel-jest": "^27.1.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.1.1",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.14",
    "typescript": "^4.4.2"
  }
}
