{
  "name": "website",
  "author": "Pete O'Shea",
  "license": "ISC",
  "version": "1.0.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest",
    "test-all": "npm run lint && npm run format && npm run type-check && npm run test",
    "type-check": "tsc --pretty --noEmit"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint",
      "prettier --write"
    ],
    "@(*.@(json|md|yml)|.*rc)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^10.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/react": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.2",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.6",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.3.4"
  }
}
